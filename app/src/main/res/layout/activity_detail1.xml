<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:id="@+id/namelayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Name: " />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repo " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/emaillayout"
        android:layout_below="@+id/namelayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Email: " />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@+id/emaillayout"
        android:id="@+id/twitterlayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Twitter Username: " />

        <TextView
            android:id="@+id/TwitterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter Username " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@+id/twitterlayout"
        android:id="@+id/publiclayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Public Repos: " />

        <TextView
            android:id="@+id/publicRepos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Repos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@+id/publiclayout"
        android:id="@+id/gitslayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Public gits: " />

        <TextView
            android:id="@+id/publicGits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public gits" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@+id/gitslayout"
        android:id="@+id/followerslayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Followers : " />

        <TextView
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public gits" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@+id/followerslayout"
        android:id="@+id/followinglayout">

        <TextView
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:text="Following : " />

        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following " />
    </LinearLayout>


</RelativeLayout>